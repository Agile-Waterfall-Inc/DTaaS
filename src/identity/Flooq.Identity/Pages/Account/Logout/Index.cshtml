@page
@model IdentityServerHost.Pages.Logout.Index

<div class="min-h-full flex flex-col justify-center items-center">
  <div class="flex flex-col justify-center">
    <img class="h-20" src="~/logo-small.svg">
  </div>
  <div class="mt-4 flex flex-col bg-gray-50 dark:bg-gray-800 p-6 border rounded-md w-96">
    <form asp-page="/Account/Logout/Index">
    <h2 class="mb-2 text-center text-xl font-medium text-gray-900 dark:text-gray-100">Would you like to sign out?</h2>
      <input type="hidden" name="logoutId" value="@Model.LogoutId" />
      <button name="Input.Button"
        class="w-full px-6 py-2 rounded bg-blue-500 hover:bg-blue-400 text-gray-100">Yes</button>
    </form>
  </div>
</div>